---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { twm } from '@/utilities/twm';
import { blockquoteRootStyles } from './blockquote-root.styles';

type Props<Tag extends HTMLTag = 'blockquote'> = Polymorphic<{
  /**
   * Shorthand for changing the default rendered element into a semantically appropriate alternative.
   * @default "blockquote"
   */
  as: Tag;

  /**
   * The size of the blockquote.
   * @default "3"
   */
  size?: '1' | '2' | '3' | '4' | '5' | '6' | '7' | '8' | '9';

  /**
   * Uses a higher contrast color for the blockquote.
   * @default "true"
   */
  highContrast?: boolean;
}>;

const { as: Tag = 'blockquote', size = '3', highContrast = true, class: className, ...others } = Astro.props;
---

<Tag class={twm(blockquoteRootStyles({ size, highContrast }), className)} {...others}>
  <slot />
</Tag>
