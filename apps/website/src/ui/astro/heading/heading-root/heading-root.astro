---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { twm } from '@/utilities/twm';
import { headingRootStyles } from './heading-root.styles';

type Props<Tag extends Extract<HTMLTag, 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> = 'h1'> = Polymorphic<{
  /**
   * Shorthand for changing the default rendered element into a semantically appropriate alternative.
   * @default "h1"
   */
  as: Tag;

  /**
   * The size of the heading.
   * @default "6"
   */
  size?: '1' | '2' | '3' | '4' | '5' | '6' | '7' | '8' | '9';

  /**
   * Uses a higher contrast color for the heading.
   * @default true
   */
  highContrast?: boolean;
}>;

const { as: Tag = 'h1', size = '6', highContrast = true, class: className, ...others } = Astro.props;
---

<Tag class={twm(headingRootStyles({ size, highContrast }), className)} {...others}>
  <slot />
</Tag>
