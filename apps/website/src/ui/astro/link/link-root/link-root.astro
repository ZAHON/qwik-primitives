---
import type { HTMLAttributes } from 'astro/types';
import { twm } from '@/utilities/twm';
import { linkRootStyles } from './link-root.styles';

interface Props extends HTMLAttributes<'a'> {
  /**
   * The URL that the hyperlink points to.
   */
  href: string;

  /**
   * Sets the visibility of the underline affordance.
   * @default "hover"
   */
  underline?: 'hover' | 'none';

  /**
   * The color of the link.
   * @default "primary"
   */
  color?: 'default' | 'primary';

  /**
   * Uses a higher contrast color for the link.
   */
  highContrast?: boolean;

  /**
   * Whether the link lead to external source.
   */
  external?: boolean;

  /**
   * Whether the link should open in a new tab.
   */
  openInNewTab?: boolean;
}

const { color = 'primary', highContrast = false, external, openInNewTab, class: className, ...others } = Astro.props;
---

<a
  rel={external ? 'noopener noreferrer' : undefined}
  target={openInNewTab ? '_blank' : undefined}
  class={twm(linkRootStyles({ color, highContrast }), className)}
  {...others}><slot /></a
>
