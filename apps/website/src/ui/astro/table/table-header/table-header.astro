---
import type { HTMLAttributes } from 'astro/types';
import { twm } from '@/utilities/twm';
import { tableHeaderStyles } from './table-header.styles';

type Props = HTMLAttributes<'thead'>;

const { class: className, ...others } = Astro.props;
---

<thead class={twm(tableHeaderStyles(), className)} {...others}>
  <slot />
</thead>
