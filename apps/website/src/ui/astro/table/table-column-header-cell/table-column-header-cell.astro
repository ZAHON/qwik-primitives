---
import type { HTMLAttributes } from 'astro/types';
import { twm } from '@/utilities/twm';
import { tableColumnHeaderCellStyles } from './table-column-header-cell.styles';

interface Props extends HTMLAttributes<'th'> {
  /**
   * Control how horizontal space is distributed within the table cell.
   * @default "start"
   */
  justify?: 'start' | 'center' | 'end';
}

const { justify = 'start', class: className, ...others } = Astro.props;
---

<th scope="col" class={twm(tableColumnHeaderCellStyles({ justify }), className)} {...others}>
  <slot />
</th>
