---
import type { HTMLAttributes } from 'astro/types';
import { twm } from '@/utilities/twm';
import { tableColumnHeaderCellStyles } from './table-column-header-cell.styles';

type Props = HTMLAttributes<'th'>;

const { class: className, ...others } = Astro.props;
---

<th scope="col" class={twm(tableColumnHeaderCellStyles(), className)} {...others}>
  <slot />
</th>
