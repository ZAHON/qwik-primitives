---
import type { HTMLAttributes } from 'astro/types';
import { twm } from '@/utilities/twm';
import { tableCaptionStyles } from './table-caption.styles';

type Props = HTMLAttributes<'caption'>;

const { class: className, ...others } = Astro.props;
---

<caption class={twm(tableCaptionStyles(), className)} {...others}>
  <slot />
</caption>
