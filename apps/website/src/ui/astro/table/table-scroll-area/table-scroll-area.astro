---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { twm } from '@/utilities/twm';
import { scrollbarStyles } from '@/styles/shared/scrollbar';
import { tableScrollAreaStyles } from './table-scroll-area.styles';

type Props<Tag extends HTMLTag = 'div'> = Polymorphic<{
  /**
   * Shorthand for changing the default rendered element into a semantically appropriate alternative.
   * @default "div"
   */
  as: Tag;

  /**
   * The size of the scrollbars.
   * @default "1"
   */
  size?: '1' | '2' | '3';
}>;

const { as: Tag = 'div', size = '1', class: className, ...others } = Astro.props;
---

<Tag data-table-scroll-area="" class={twm(tableScrollAreaStyles(), scrollbarStyles({ size }), className)} {...others}>
  <slot />
</Tag>
