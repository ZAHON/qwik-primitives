---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { twm } from '@/utilities/twm';
import { textRootStyles } from './text-root.styles';

type Props<Tag extends HTMLTag = 'p'> = Polymorphic<{
  /**
   * @default "p"
   * Shorthand for changing the default rendered element into a semantically appropriate alternative.
   */
  as: Tag;

  /**
   * The size of the text.
   */
  size?: '1' | '2' | '3' | '4' | '5' | '6' | '7' | '8' | '9';

  /**
   * Uses a higher contrast color for the text.
   * @default true
   */
  highContrast?: boolean;
}>;

const { as: Tag = 'p', size, highContrast = true, class: className, ...others } = Astro.props;
---

<Tag class={twm(textRootStyles({ size, highContrast }), className)} {...others}>
  <slot />
</Tag>
