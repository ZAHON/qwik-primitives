---
import { HeadingLink } from '@/ui/astro/heading-link';
import { mdxH2RootStyles } from './mdx-h2-root.styles';

interface Props {
  /**
   * The unique id for the mdx h2.
   */
  id: string;
}

const { id } = Astro.props;
---

<HeadingLink.Root id={id} as="h2" size="6" class={mdxH2RootStyles()}>
  <HeadingLink.Content href={`#${id}`}>
    <slot />

    <HeadingLink.Indicator>
      <HeadingLink.IndicatorIcon height={15} width={15} />
    </HeadingLink.Indicator>
  </HeadingLink.Content>
</HeadingLink.Root>
