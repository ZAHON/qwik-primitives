---
import { HeadingLink } from '@/ui/astro/heading-link';
import { mdxH3Styles } from './mdx-h3.styles';

interface Props {
  /**
   * The unique id for the mdx h2.
   */
  id: string;
}

const { id } = Astro.props;
---

<HeadingLink.Root id={id} as="h3" size="4" class={mdxH3Styles()}>
  <HeadingLink.Content href={`#${id}`}>
    <slot />

    <HeadingLink.Indicator>
      <HeadingLink.IndicatorIcon height={15} width={15} />
    </HeadingLink.Indicator>
  </HeadingLink.Content>
</HeadingLink.Root>
