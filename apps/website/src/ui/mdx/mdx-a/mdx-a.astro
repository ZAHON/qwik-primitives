---
import { Link } from '@/ui/astro/link';
import { ExternalLinkIcon } from '@/icons/external-link-icon';

interface Props {
  /**
   * The URL that the link points to.
   */
  href: string;
}

const { href } = Astro.props;

const isExternalLink = href.split('/')[0] === 'https:';
const isSectionLink = href.split('')[0] === '#';
---

<Link.Root href={href} external={isExternalLink} openInNewTab={!isSectionLink}
  ><slot />{isExternalLink && <ExternalLinkIcon width="15" height="15" class="size-[0.9375rem]" />}</Link.Root
>
