---
import { NavLink } from '@/ui/astro/nav-link';

interface Props {
  /**
   * The URL that the quick navigation link points to.
   */
  href: string;

  /**
   * Used to identify the link as the currently active page.
   */
  active: boolean;
}

const { href, active } = Astro.props;
---

<NavLink.Root href={href} data-active={active ? '' : undefined} highContrast={true} color="default" radius="full">
  <slot />
</NavLink.Root>
