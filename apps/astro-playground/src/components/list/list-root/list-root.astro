---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'ul'> {
  /**
   * The type of the list.
   * @default "unordered"
   */
  type?: 'ordered' | 'unordered';
}

const { type = 'unordered', ...others } = Astro.props;
---

{
  type === 'unordered' && (
    <ul {...others}>
      <slot />
    </ul>
  )
}

{
  type === 'ordered' && (
    <ol {...others}>
      <slot />
    </ol>
  )
}

<style>
  ul {
    display: flex;
    flex-direction: column;
    row-gap: 0.5rem;
  }
</style>
